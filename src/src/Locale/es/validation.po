# Users validation messages
msgid "Password must be at least 8 characters long"
msgstr "La contraseña debe tener al menos 8 caracteres"

msgid "Invalid role. Must be admin, user, or viewer"
msgstr "Rol inválido. Debe ser admin, user o viewer"

# Monitors validation messages
msgid "Invalid monitor type"
msgstr "Tipo de monitor inválido"

msgid "Configuration must be valid JSON"
msgstr "La configuración debe ser un JSON válido"

msgid "Check interval must be greater than 0"
msgstr "El intervalo de verificación debe ser mayor que 0"

msgid "Timeout must be greater than 0"
msgstr "El timeout debe ser mayor que 0"

msgid "Retry count cannot be negative"
msgstr "El número de reintentos no puede ser negativo"

msgid "Invalid status"
msgstr "Estado inválido"

msgid "Uptime percentage must be between 0 and 100"
msgstr "El porcentaje de uptime debe estar entre 0 y 100"

msgid "Display order cannot be negative"
msgstr "El orden de visualización no puede ser negativo"

# Settings validation messages
msgid "Invalid type. Must be string, integer, boolean, or json"
msgstr "Tipo inválido. Debe ser string, integer, boolean o json"

# Alert Rules validation messages
msgid "Invalid alert channel"
msgstr "Canal de alerta inválido"

msgid "Invalid trigger type"
msgstr "Tipo de activador inválido"

msgid "Throttle minutes cannot be negative"
msgstr "Los minutos de throttle no pueden ser negativos"

msgid "Recipients must be a valid non-empty JSON array"
msgstr "Los destinatarios deben ser un array JSON válido y no vacío"

# Alert Logs validation messages
msgid "Invalid alert log status"
msgstr "Estado de registro de alerta inválido"
