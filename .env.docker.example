# ISP Status Page - Docker Environment Variables
# Copy this file to .env.docker for production deployments

# Application
APP_NAME="ISP Status Page"
APP_DEBUG=false

# Security (CHANGE THIS!)
SECURITY_SALT=change-this-to-a-random-64-character-hex-string

# Database (SQLite - managed by Docker)
DATABASE_URL=sqlite:///var/www/html/database.db

# Email Configuration (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=noreply@example.com
EMAIL_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=ISP Status

# Status Page
STATUS_PAGE_TITLE=Status do ISP
STATUS_PAGE_PUBLIC=true

# Monitoring
DEFAULT_CHECK_INTERVAL=60
CHECK_RETENTION_DAYS=30
LOG_RETENTION_DAYS=7
