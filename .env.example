# ISP Status Page - Environment Configuration
# Copy this file to .env and adjust values as needed

# Application
APP_NAME="ISP Status Page"
APP_DEBUG=true
APP_ENCODING="UTF-8"
APP_DEFAULT_LOCALE="pt_BR"
APP_DEFAULT_TIMEZONE="America/Sao_Paulo"

# Security
SECURITY_SALT="__CHANGE_THIS_TO_RANDOM_STRING__"
# Generate with: bin/cake security generate_salt

# Database Configuration
# Choose ONE option below by uncommenting it

# OPTION 1: SQLite (Default - Simple, no server needed)
# Best for: Development, small deployments (up to 100 monitors)
DATABASE_URL="sqlite:///database.db"

# OPTION 2: MySQL/MariaDB (Recommended for production)
# Best for: Medium to large deployments (100+ monitors)
# DATABASE_URL="mysql://user:password@localhost/isp_status_page?encoding=utf8mb4&timezone=UTC"

# OPTION 3: PostgreSQL (Alternative for production)
# Best for: Large deployments with complex queries
# DATABASE_URL="postgres://user:password@localhost/isp_status_page?encoding=utf8&timezone=UTC"

# Query Logging (set to true for debugging)
LOG_QUERIES=false

# Email (SMTP)
EMAIL_TRANSPORT="default"
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_USERNAME="noreply@example.com"
EMAIL_PASSWORD="your-smtp-password"
EMAIL_TLS=true
EMAIL_FROM="noreply@example.com"
EMAIL_FROM_NAME="ISP Status"

# Cache
CACHE_DURATION="+1 hour"
CACHE_PREFIX="isp_status_"

# Session
SESSION_TIMEOUT="30"
SESSION_COOKIE_NAME="ISP_STATUS"

# Status Page
STATUS_PAGE_CACHE=30
STATUS_PAGE_TITLE="Status do ISP"
STATUS_PAGE_PUBLIC=true

# Monitoring
DEFAULT_CHECK_INTERVAL=60
CHECK_RETENTION_DAYS=30
LOG_RETENTION_DAYS=7

# IXC Integration (optional)
IXC_ENABLED=false
IXC_BASE_URL=""
IXC_API_TOKEN=""
IXC_API_VERSION="v1"

# Zabbix Integration (optional)
ZABBIX_ENABLED=false
ZABBIX_BASE_URL=""
ZABBIX_USERNAME=""
ZABBIX_PASSWORD=""

# WhatsApp (future)
WHATSAPP_ENABLED=false
WHATSAPP_API_KEY=""

# Telegram (future)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=""

# SMS (future)
SMS_ENABLED=false
SMS_PROVIDER=""
SMS_API_KEY=""

# Logging
LOG_DEBUG=true
LOG_ERROR=true
LOG_QUERIES=false
